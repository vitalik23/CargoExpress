@model CargoExpress.Models.Client
@{
    ViewData["Title"] = "Оформлення замовлення";
}

    <form asp-action="order" asp-controller="home" method="post" name="orderForm">
        <div class="form-group row m-md-3">
            <label asp-for="Name" align="right" class="col-sm-4  col-form-label">Ім'я</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Name" placeholder="Ім'я" required />
            </div>
        </div>
        <div class="form-group row m-md-3">
            <label asp-for="Surname" align="right" class="col-sm-4  col-form-label">Прізвище</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Surname" placeholder="Прізвище" required />
            </div>
        </div>
        <div class="form-group row m-md-3">
            <label asp-for="PhoneNumber" align="right" class="col-sm-4  col-form-label">Номер</label>
            <div class="col-md-4">
                <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="Номер" required />
            </div>
        </div>

        <div class="form-group row m-md-3">
            <label asp-for="PlaceStart" align="right" class="col-sm-4  col-form-label">Місце відправлення</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="PlaceStart" placeholder="Звідки відправляти" required />
            </div>
        </div>
        <div class="form-group row m-md-3">
            <label asp-for="PlaceEnd" align="right" class="col-sm-4  col-form-label">Місце прибуття</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="PlaceEnd" placeholder="Куда відправляти" required />
            </div>
        </div>
        <div class="form-group row m-md-3">
            <label asp-for="Weight" align="right" class="col-sm-4  col-form-label">Вага</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Weight" placeholder="Вага" required />
            </div>
        </div>
        <div class="form-group row m-md-3">
            <label asp-for="Price" align="right" class="col-sm-4  col-form-label">Оцінка товару</label>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Price" placeholder="Ціна" required />
            </div>
        </div>

        <div class="form-group row">
            <input type="submit" value="Оформити" class="btn btn-danger mx-auto" />
        </div>

        <a href="~/Home/Information">Список клієнтів</a>
    </form>
